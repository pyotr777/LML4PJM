<LML_da_workflow      >
<vardefs>
<var key="tmpdir" value="./tmp_fx02p08_13093"/>
<var key="permdir" value="./perm_fx02p08"/>
</vardefs>
<step active="1" exec_after="cacherawfile" id="LML2LML" type="execute">
<cmd  exec="/usr/bin/perl LML2LML/LML2LML.pl -v  -layout $tmpdir/layout.xml -output $stepoutfile $stepinfile"/>
</step>
<step active="1" exec_after="combineLML" id="addcolor" type="execute">
<cmd  exec="/usr/bin/perl $instdir/LML_color/LML_color_obj.pl -colordefs $instdir/LML_color/default.conf -dbdir /tmp/LMLCache_fx02p08/ -o     $stepoutfile $stepinfile"/>
</step>
<step active="1" exec_after="addcolor" id="cacherawfile" type="execute">
<cmd  exec="cp $stepinfile /tmp/LMLCache_fx02p08/LML_raw.xml.new"/>
<cmd  exec="mv /tmp/LMLCache_fx02p08/LML_raw.xml.new /tmp/LMLCache_fx02p08/LML_raw.xml"/>
</step>
<step active="1" exec_after="getdata" id="combineLML" type="execute">
<cmd  exec="/usr/bin/perl $instdir/LML_combiner/LML_combine_obj.pl  -v -o $stepoutfile $tmpdir/sysinfo_LML.xml $tmpdir/jobs_LML.xml $tmpdir/nodes_LML.xml"/>
</step>
<step active="1" exec_after="" id="getdata" type="execute">
<cmd  exec="CMD_JOBINFO=/usr/bin/pjstat CMD_NODEINFO=/usr/bin/pjshowrsc  /usr/bin/perl rms/PJM/da_system_info_LML.pl               $tmpdir/sysinfo_LML.xml"/>
<cmd  exec="CMD_JOBINFO=/usr/bin/pjstat CMD_NODEINFO=/usr/bin/pjshowrsc  /usr/bin/perl rms/PJM/da_nodes_info_LML.pl                $tmpdir/nodes_LML.xml"/>
<cmd  exec="CMD_JOBINFO=/usr/bin/pjstat CMD_NODEINFO=/usr/bin/pjshowrsc  /usr/bin/perl rms/PJM/da_jobs_info_LML.pl                 $tmpdir/jobs_LML.xml"/>
</step>
</LML_da_workflow>
